
@{
    ViewData["Title"] = "Claims";
}
@model List<ClaimViewModel>
<h1>Claims</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Issuer</th>
            <th>Type</th>
            <th>Value</th>
        </tr>
    </thead>

    <tbody>
        @for(int i=0; i<Model.Count; i++ )
        {
            <tr>
                <td>@Model[i].Issuer</td>
                <td>@Model[i].Type</td>
                <td>@Model[i].Value</td>
            </tr>
        }
