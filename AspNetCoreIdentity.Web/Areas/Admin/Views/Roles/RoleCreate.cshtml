@model AdminModel.RoleCreateViewModel

@{
    ViewData["Title"] = "RoleCreate";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Rol Oluşturma</h2>
        <form asp-action="RoleCreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  <!-- Bu alanda controllerdan gelen model hataları olacak-->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a class="btn btn-secondary"asp-action="Index">Rol Listesine Geri Dön</a>
        </div>
    </div>
 
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
